<%= form_with(model: student, local: true) do |form| %>
  <% if student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="form-row">

      <div class="col-md-3">
        <label id="lblId">Id:</label>
        <input type="number" id="student_id" name="student[id]" 
        class="form-control" placeholder="id Automatico" readonly="readonly"
        value="<%= @student != nil ? @student.id : '' %>">        
      </div>
      
      <div class="col-md-3">        
        <label id="lblgrado_id">Grado:</label>
        <%@des_Grado = Grade.all%>
        <select id="student_grado_id" name="student[grado_id]" class="form-control">
          <% @des_Grado.each do |item|%>
            <option value="<%= item.id %>" <%= @student.grado_id == item.id ? 'selected' : '' %> ><%= item.descripcion %></option>
          <% end %>
        </select>
      </div>

      <div class="col-md-3">
        <label id="lbltipo_documentacion_id">Tipo Documento:</label>
        <%@des_tipo_documento = DocumentType.all%>
        <select id="student_tipo_documentacion_id" name="student[tipo_documentacion_id]" class="form-control">
          <% @des_tipo_documento.each do |item|%>
            <option value="<%= item.id %>" <%= @student.tipo_documentacion_id == item.id ? 'selected' : '' %> ><%= item.descripcion %></option>
          <% end %>
        </select>
      </div>

      <div class="col-md-3">
        <label id="lblnumero_identificacion">Identificación:</label>
        <input type="text" id="student_numero_identificacion" name="student[numero_identificacion]" 
        class="form-control" placeholder="Ingrese identificación" required="required"
        value="<%= @student != nil ? @student.numero_identificacion : '' %>">
      </div>

    </div>
  </div>

  <div class="form-group">
    <div class="form-row">

      <div class="col-md-3">
        <label id="lblprimer_nombre">Primer Nombre:</label>
        <input type="text" id="student_primer_nombre" name="student[primer_nombre]" 
        class="form-control" placeholder="Primer Nombre" required="required"
        value="<%= @student != nil ? @student.primer_nombre : '' %>">        
      </div>
      
      <div class="col-md-3">        
        <label id="lblsegundo_nombre">Segundo Nombre:</label>
        <input type="text" id="student_segundo_nombre" name="student[segundo_nombre]" 
        class="form-control" placeholder="Segundo Nombre"
        value="<%= @student != nil ? @student.segundo_nombre : '' %>">
      </div>

      <div class="col-md-3">
        <label id="lblprimer_apellido">Primer Apellido:</label>
        <input type="text" id="student_primer_apellido" name="student[primer_apellido]" 
        class="form-control" placeholder="Primer Apellido" required="required"
        value="<%= @student != nil ? @student.primer_apellido : '' %>">
      </div>

      <div class="col-md-3">
        <label id="lblsegundo_apellido">Segundo Apellido:</label>
        <input type="text" id="student_segundo_apellido" name="student[segundo_apellido]" 
        class="form-control" placeholder="Segundo Apellido"
        value="<%= @student != nil ? @student.segundo_apellido : '' %>">
      </div>

    </div>
  </div>

  <div class="form-group">
    <div class="form-row">

      <div class="col-md-3">
        <label id="lblgenero_id">Genero:</label>
        <%@des_Genero = Gender.all%>
        <select id="student_genero_id" name="student[genero_id]" class="form-control">
          <% @des_Genero.each do |item|%>
            <option value="<%= item.id %>" <%= @student.genero_id == item.id ? 'selected' : '' %> ><%= item.descripcion %></option>
          <% end %>
        </select>
      </div>

      <div class="col-md-3">
        <label id="lblfecha_nacimiento">Fecha nacimiento:</label>
        <input type="text" id="student_fecha_nacimiento" name="student[fecha_nacimiento]" 
        class="form-control" placeholder="Fecha nacimiento"
        value="<%= @student != nil ? @student.fecha_nacimiento : '' %>">        
      </div>
      
      <div class="col-md-3">        
        <label id="lbljornada_id">Jornada:</label>
        <%@des_Jornada = WorkingDay.all%>
        <select id="student_jornada_id" name="student[jornada_id]" class="form-control">
          <% @des_Jornada.each do |item|%>
            <option value="<%= item.id %>" <%= @student.jornada_id == item.id ? 'selected' : '' %> ><%= item.descripcion %></option>
          <% end %>
        </select>
      </div>

      <div class="col-md-3">
        <label id="lblacudiente_id">Acudiente:</label>

        <%@des_Acudiente = Attendant.all%>
        <select id="student_acudiente_id" name="student[acudiente_id]" class="form-control">
          <% @des_Acudiente.each do |item|%>
            <option value="<%= item.id %>" <%= @student.acudiente_id == item.id ? 'selected' : '' %> ><%= item.cedula %> - <%= item.primer_nombre %> <%= item.primer_apellido %></option>
          <% end %>
        </select>

      </div>

    </div>
  </div>

  <div class="form-group">
    <div class="form-row">

    <div class="col-md-3">
        <label id="lblimagen">Imagen:</label>
        <input type="text" id="student_imagen" name="student[imagen]" 
        class="form-control" placeholder="Imagen"
        value="<%= @student != nil ? @student.imagen : '' %>">        
      </div>
    <div class="col-md-3">
        <label id="lbldireccion">Dirección:</label>
        <input type="text" id="student_direccion" name="student[direccion]" 
        class="form-control" placeholder="Direccion" required="required"
        value="<%= @student != nil ? @student.direccion : '' %>">
      </div>
      <div class="col-md-3">
        <label id="lblfecha_creacion">Fecha Creacion:</label>
        <input type="text" id="student_fecha_creacion" name="student[fecha_creacion]" 
        class="form-control" placeholder="Fecha Automatico" readonly="readonly"
        value="<%= @student != nil ? @student.fecha_creacion : '' %>">
      </div>
      
    </div>
  </div>

  <div class="form-group">
    <div class="form-row">
      <div class="col-md-12">
        
        <input type="submit" id="btnAceptar" value="Aceptar"
        class="btn btn-primary" name="btnAceptar"/>

      </div>
    </div>
  </div>

<% end %>  