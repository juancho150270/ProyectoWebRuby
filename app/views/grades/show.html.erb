<p id="notice"><%= notice %></p>

<div class="container">
  <div class="card mx-auto mt-5">
    <div class="card-header">Detalle</div>
    <div class="card-body">

       <div class="form-group">
        <div class="form-row">
          <div class="col-md-4">
            <strong>Id:</strong>
            <%= @grade.id %>
          </div>
          <div class="col-md-4">
            <strong>Descripcion:</strong>
            <%= @grade.descripcion %>
          </div>
          <div class="col-md-4">
            <strong>Fecha Creacion:</strong>
            <%= @grade.fecha_creacion %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <%= link_to 'Editar', edit_grade_path(@grade),{ class: "btn btn-info btn-sm" } %> 
                <%= link_to 'Volver', grades_path,{ class: "btn btn-info btn-sm" } %>
            </div>
        </div> 
      </div>
    </div>
  </div> 
</div>
