<%= form_with(model: grade, local: true) do |form| %>
  <% if grade.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(grade.errors.count, "error") %> prohibited this grade from being saved:</h2>

      <ul>
      <% grade.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="form-row">
      <div class="col-md-3">

        <label id="lblId">Id:</label>
        <input type="number" id="grade_id" name="grade[id]" 
        class="form-control" placeholder="id Automatico" readonly="readonly"
        value="<%= @grade != nil ? @grade.id : '' %>">
        
      </div>
      
      <div class="col-md-3">
        
        <label id="lbldescripcion">Descripción:</label>
        <input type="text" id="grade_descripcion" name="grade[descripcion]" 
        class="form-control" placeholder="Ingrese descripción" required="required"
        value="<%= @grade != nil ? @grade.descripcion : '' %>">

      </div>

      <div class="col-md-3">
        
        <label id="lblfecha_creacion">Fecha creación:</label>
        <input type="text" id="grade_fecha_creacion" name="grade[fecha_creacion]" 
        class="form-control" placeholder="Fecha Automatico" readonly="readonly"
        value="<%= @grade != nil ? @grade.fecha_creacion : '' %>">

      </div>

    </div>
  </div>

  <div class="form-group">
    <div class="form-row">
      <div class="col-md-12">
        
        <input type="submit" id="btnAceptar" value="Aceptar"
        class="btn btn-primary" name="btnAceptar"/>

      </div>
    </div>
  </div>

<% end %>  