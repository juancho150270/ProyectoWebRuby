<p id="notice"><%= notice %></p>

<div class="container">
  <div class="card mx-auto mt-5">
    <div class="card-header">Perfiles</div>
    <div class="card-body">

 <div class="form-group">
    <div class="form-row">
      <div class="col-md-6">
        <%= link_to 'Nuevo', new_profile_path,{ class: "btn btn-warning btn-sm" } %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="form-row">
      <div class="col-md-6">

        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Id</th>
              <th>Descripcion</th>
              <th>Fecha creación</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @profiles.each do |profile| %>
              <tr>
                <td><%= profile.id %></td>
                <td><%= profile.descripcion %></td>
                <td><%= profile.fecha_creacion %></td>
                <td><%= link_to 'Ver', profile,{ class: "btn btn-info btn-sm" } %></td>
                <td><%= link_to 'Editar', edit_profile_path(profile),{ class: "btn btn-success btn-sm" } %></td>
                <td><%= link_to 'Eliminar', profile,:class=>"btn btn-danger btn-sm", method: :delete, data: { confirm: '¿Realmente desea eliminar el registro?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>

    </div>
  </div>
</div>
