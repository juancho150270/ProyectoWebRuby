      <h2><%= pluralize(working_day.errors.count, "error") %> prohibited this working_day from being saved:</h2>

      <ul>
      <% working_day.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="form-row">
      <div class="col-md-3">

        <label id="lblId">Id:</label>
        <input type="number" id="working_day_id" name="working_day[id]" 
        class="form-control" placeholder="id Automatico" readonly="readonly"
