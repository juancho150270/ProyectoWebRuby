<p id="notice"><%= notice %></p>

<div class="container">
  <div class="card mx-auto mt-5">
    <div class="card-header">Acudiente</div>
    <div class="card-body">

 <div class="form-group">
    <div class="form-row">
      <div class="col-md-6">
        <%= link_to 'Nuevo', new_attendant_path,{ class: "btn btn-warning btn-sm" } %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="form-row">
      <div class="col-md-6">

        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Id</th>
              <th>Primer nombre</th>
              <th>Primer apellido</th>
              <th>Telefono celular</th>
              <th>Parentesco</th>
              <th>Identificación</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @attendants.each do |attendant| %>
              <tr>
                <td><%= attendant.id %></td>
                <td><%= attendant.primer_nombre %></td>
                <td><%= attendant.primer_apellido %></td>
                <td><%= attendant.telefono_celular %></td>
                <td><%des_Parentesco=KinType.find_by(:id=>attendant.parentesco)%>
                  <%=des_Parentesco.descripcion%></td>
                <td><%= attendant.cedula %></td>
                <td><%= link_to 'Ver', attendant,{ class: "btn btn-info btn-sm" } %></td>
                <td><%= link_to 'Editar', edit_attendant_path(attendant),{ class: "btn btn-success btn-sm" } %></td>
                <td><%= link_to 'Eliminar', attendant,:class=>"btn btn-danger btn-sm", method: :delete, data: { confirm: '¿Realmente desea eliminar el registro?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>

    </div>
  </div>
</div>
