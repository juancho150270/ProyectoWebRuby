<%if @mensaje!=nil%>
<script>
swal({ title: "<%=@mensaje%>", type: "<%=@tipo%>", timer: 4000, 
showConfirmButton: true, closeOnConfirm: true });
</script>
<%end%>
<div class="container">
    <div class="card mx-auto mt-5">
        <div class="card-header">Registrar usuario</div>
        <div class="card-body">
        <%= form_tag(:id => "form_rgt", :controller => "users", :action => "save_register", :method => "post") do |f| %>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <label id="lbLogin">Login: </label>
                        <input class="form-control" id="txtLogin" name="txtLogin" type="email" aria-describedby="emailHelp" placeholder="Ingrese login (email)" required="required">
                    </div>
                    <div class="col-md-6">
                        <label id="lbPerfil">Perfil: </label>
                        <select id="ddlPerfiles" name="ddlPerfiles" class="form-control">
                            <%@perfiles.each do |item| %>
                              <option value="<%=item.id%>"><%=item.descripcion%></option>
                            <% end %>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <label id="lbPassword">Password: </label>
                        <input type="password" id="txtPassword" name="txtPassword" placeholder="Ingrese password" class="form-control" required="required">
                    </div>
                    <div class="col-md-6">
                        <label id="lbConfirmarPassword">Confirmar Password: </label>
                        <input type="password" id="txtConfirmarPassword" name="txtConfirmarPassword" placeholder="Confirmar password" class="form-control" required="required">
                    </div>
                </div>
            </div>
            <input type="submit" class="btn btn-primary btn-block" value="Aceptar" />
        <% end %>
        </div>
    </div>
</div>
