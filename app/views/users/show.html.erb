<p id="notice"><%= notice %></p>

<div class="container">
  <div class="card mx-auto mt-5">
    <div class="card-header">Usuario</div>
    <div class="card-body">

       <div class="form-group">
        <div class="form-row">
          <div class="col-md-3">
            <strong>Id:</strong>
            <%= @user.id %>
          </div>
          <div class="col-md-3">
            <strong>Login:</strong>
            <%= @user.login %>
          </div>
          <div class="col-md-3">
            <strong>Perfil:</strong>            
            <%perfiluser=Profile.find_by(:id=>@user.perfil_id)%>
            <%= perfiluser.descripcion%>

          </div>
          <div class="col-md-3">
            <strong>Telefono:</strong>
            <%= @user.telefono %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="form-row">          
          <div class="col-md-3">
            <strong>Correo:</strong>
            <%= @user.correo %>
          </div>
          <div class="col-md-3">
            <strong>Fecha creación:</strong>
            <%= @user.fecha_creacion %>
          </div>
          <div class="col-md-3">
            <strong>Tipo identificación:</strong>
            <%des_tipo_documento_id=DocumentType.find_by(:id=>@user.tipo_documento_id)%>
            <%=des_tipo_documento_id.descripcion%>
          </div>
          <div class="col-md-3">
            <strong>Identificación:</strong>
            <%= @user.cedula %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="form-row">
          <div class="col-md-3">
            <strong>Primer nombre:</strong>
            <%= @user.primer_nombre %>
          </div>
          <div class="col-md-3">
            <strong>Segundo nombre:</strong>
            <%= @user.segundo_nombre %>
          </div>
          <div class="col-md-3">
            <strong>Primer apellido:</strong>
            <%= @user.primer_apellido %>
          </div>
          <div class="col-md-3">
            <strong>Segundo Apellido:</strong>
            <%= @user.segundo_apellido %>
          </div>
        </div>
      </div>      

      <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <%= link_to 'Editar', edit_user_path(@user),{ class: "btn btn-info btn-sm" } %> 
                <%= link_to 'Volver', users_path,{ class: "btn btn-info btn-sm" } %>
            </div>
        </div> 
      </div>
    </div>
  </div> 
</div>


